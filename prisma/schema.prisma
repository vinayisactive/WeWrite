generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Pronouns {
  HE_HIM
  SHE_HER
  THEY_THEM
  ZE_ZIR
  XE_XEM
  ANY
  OTHER
}

enum Category {
  AI
  TECH
  FASHION
  HEALTH
  EDUCATION
  NEWS
  FOOD
}

model User {
  id          String      @id @default(uuid())
  email       String   @unique
  username    String   @unique
  firstName   String?
  lastName    String?
  age         Int?
  bio         Bio?
  blogs  Blog[]
  password    String
  createdAt   DateTime @default(now())
}

model Bio {
  id          String      @id @default(uuid())
  bio         String?
  pronouns    Pronouns?
  userId      String      @unique
  user        User     @relation(fields: [userId], references: [id])
}

model Blog {
  id String @id @default(uuid())
  title String
  description String
  content String
  category Category
  published Boolean @default(false)
  authorId String
  author User @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
}

